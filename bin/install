#!/bin/bash
set -e

# Docker Compose
BASE_CMD="docker-compose -f ./laradock/docker-compose.yml --env-file=./laradock/.env"
EXEC_CMD=$BASE_CMD" exec --user=laradock workspace bash -c "


# Overrides all preferences.
cp -rf ./build/laradock/. ./laradock/

echo "Launching the guest OS..."
$BASE_CMD up nginx mysql redis workspace 

echo "Installing requisities..."
$EXEC_CMD "$(cat .//bootstrap.sh)"
